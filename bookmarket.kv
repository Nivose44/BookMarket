        id: title
    Label:
        id: date
        halign: 'left'
        text_size: self.size
    Label:
        id: bet
        halign: 'left'
        text_size: self.size
    Label: 
        id: result
        halign: 'left'
        text_size: self.size
    Label:
        id: earning
        halign: 'left'
        text_size: self.size

<BetPage>:
