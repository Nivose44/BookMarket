<BetPage>:
    cols: 1
    size_hint_y: None
    spacing: 10

<Bet>:
    canvas:
        Color:
            rgba: self.color
        Rectangle:
            size: self.size
            pos: self.pos

    size_hint_y: None
    height: 120
    cols: 1
    Label:
        id: title
    Label:
        id: date
        halign: 'left'
        text_size: self.size
    Label:
        id: bet
        halign: 'left'
        text_size: self.size
    Label: 
        id: result
        halign: 'left'
        text_size: self.size
    Label:
        id: earning
        halign: 'left'
        text_size: self.size

