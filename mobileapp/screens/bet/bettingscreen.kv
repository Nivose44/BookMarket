<BackgroundColor@Widget>
    background_color: 1, 1, 1, 1
    canvas.before:
        Color:
            rgba: root.background_color
        Rectangle:
            size: self.size
            pos: self.pos

<BackgroundLabel@Label+BackgroundColor>
    background_color: 0, 0, 0, 0

<Disconnect@ButtonBehavior+Image>
    source:'images/logout2.png'  
    size_hint: (.1, 0.5)
    pos: root.width/0.125, 30

<Search>
    cols: 2
    TextInput:
        id: search_input
        hint_text: "Nom Ã©quipe"
        size_hint_y: None
        height: 50
    Button:
        size_hint: None, None
        widht: root.width / 5
        height: 50
        text: "Search"
        on_press: root.update_private_bets()


<BettingScreen>:
    name: "datadisplay"
    canvas:
        Color:
            rgba: 0.109, 0.158, 0.235, 1
        Rectangle:
            size: self.size
            pos: self.pos

    GridLayout:
        cols: 1
        RelativeLayout:
            id: top
            size_hint_y: None
            height: root.height / 5
            Image:
                source: 'images/logo.png'

        GridLayout
            cols: 2
            size_hint_y: None
            height: root.height / 10
            Widget:
            ScaleLabel:
                id: amount
                background_color: 0.109, 0.158, 0.235, 1

        GridLayout:
            id: screen
            cols: 1
            size_hint_y: None
            height: root.height / 2.4
            canvas:
                Color:
                    rgba: 0, 0, 0, 1
                Rectangle:
                    size: self.size
                    pos: self.pos
            GridLayout:
                cols:3
                size_hint_y: None
                height: root.height / 2.4
                BackgroundLabel:
                    size_hint: None, None
                    height: root.height / 2.4
                    width: root.width/100
                    background_color: 0.150, 0.168, 0.194, 1

                ScrollView:
                    size_hint_y: None
                    height: root.height / 2.4
                    id: pages

                BackgroundLabel:
                    size_hint: None, None
                    height: root.height / 2.4
                    width: root.width/100
                    background_color: 0.150, 0.168, 0.194, 1

            GridLayout
                cols: 1
                id: search
                canvas:
                    Color:
                        rgba: 0, 0, 0, 1
                    Rectangle:
                        size: self.size
                        pos: self.pos


        RelativeLayout:
            id: bottom
            BackgroundLabel:
                font_size: 40
                background_color: 0.109, 0.158, 0.235, 1
                size_hint_y: None
                height: root.height/5

            Disconnect:
                on_release:
                    root.manager.transition.direction = "right"
                    root.logout()